function App() {
  const [goodScore, setGoodScore] = useState(50)
  const [badScore, setBadScore] = useState(50)
  const [note, setNote] = useState('')
  const [log, setLog] = useState([])
  const [comment, setComment] = useState('')

  const handleCheck = () => {
    const time = new Date().toLocaleString()
    const commentText = generateTherapistComment(note, goodScore, badScore)
    setComment(commentText)
    setLog([...log, { goodScore, badScore, note, comment: commentText, time }])
  }

  const generateTherapistComment = (note, good, bad) => {
    if (bad > good) {
      return `ä»Šæ—¥ã¯å°‘ã—æ°—åˆ†ãŒæ²ˆã¿æ°—å‘³ã§ã™ã­ã€‚\nã€Œ${note}ã€\nâ€¦ä½•ãŒä¸€ç•ªã¤ã‚‰ã‹ã£ãŸï¼Ÿå°‘ã—ã ã‘ã§ã‚‚è©±ã—ã¦ã¿ã¾ã›ã‚“ã‹ï¼Ÿ`
    } else if (good > bad) {
      return `å‰å‘ããªæ°—æŒã¡ãŒä¼ã‚ã£ã¦ãã¾ã™ã­ã€‚\nã€Œ${note}ã€\nâ€¦ãã®ä¸­ã§ä¸€ç•ªå¬‰ã—ã‹ã£ãŸã“ã¨ã£ã¦ä½•ã§ã—ãŸã‹ï¼Ÿ`
    } else {
      return `æ°—æŒã¡ãŒæºã‚Œã¦ã„ã‚‹ã‚ˆã†ã§ã™ã­ã€‚\nã€Œ${note}ã€\nâ€¦ãã®æ°—æŒã¡ã€ã‚‚ã†å°‘ã—æ·±ãè¦‹ã¤ã‚ã¦ã¿ã¾ã—ã‚‡ã†ã‹ã€‚`
    }
  }

  return (
    <div style={{ padding: 20, fontFamily: 'sans-serif' }}>
      <h1>æ°—åˆ†å¸³365ğŸŒ¤ï¸</h1>
      <p>è‰¯ã„æ°—åˆ†ï¼ˆ0ã€œ100ï¼‰</p>
      <input
        type="number"
        value={goodScore}
        onChange={(e) => setGoodScore(parseInt(e.target.value))}
        min={0}
        max={100}
      />
      <p>æ‚ªã„æ°—åˆ†ï¼ˆ0ã€œ100ï¼‰</p>
      <input
        type="number"
        value={badScore}
        onChange={(e) => setBadScore(parseInt(e.target.value))}
        min={0}
        max={100}
      />
      <p>ãƒ¡ãƒ¢ï¼ˆè‡ªç”±è¨˜å…¥ï¼‰</p>
      <input
        type="text"
        value={note}
        onChange={(e) => setNote(e.target.value)}
        placeholder="ä¾‹ï¼šä»Šæ—¥ã¯æœã‹ã‚‰ã ã‚‹ã‹ã£ãŸâ€¦"
        style={{ width: '100%' }}
      />
      <br /><br />
      <button onClick={handleCheck}>AIã‚»ãƒ©ãƒ”ã‚¹ãƒˆã«è©±ã—ã¦ã¿ã‚‹</button>

      {comment && (
        <>
          <h3>ä»Šæ—¥ã®ã‚³ãƒ¡ãƒ³ãƒˆ</h3>
          <p style={{ whiteSpace: 'pre-wrap' }}>{comment}</p>
